%div{"data-section" => data_attribute}
  %table{:class => "table table-striped table-dark #{html_class}"}
    %thead
      %tr
        %th{:scope => "col"} Order id
        %th{:scope => "col"} Customer
        %th{:scope => "col"} Main dish
        %th{:scope => "col"} Appetizer dish
        %th{:scope => "col"} Drink
    %tbody
      - collection.each do |order|
        %tr
          %th{:scope => "row"}= order.id
          %td= order.user_email
          %td= order.main_dish_name
          %td= order.appetizer_dish_name
          %td= order.drink_dish_name
    - if show_cost
      %tr
        %th.text-center{:colspan => "5"}
          Total lunch cost #{orders_facade.total_lunch_cost_for_today}
  - if !show_cost
    != pagy_bootstrap_nav(orders_facade.pagy_instance)
