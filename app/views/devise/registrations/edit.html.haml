= header(                        |
    header_text: "Edit profile", |
    color: "dark",               |
  )                              |
.container
  .row
    .col-sm-9.col-md-7.col-lg-5.mx-auto
      .card.card-signin.my-5
        .card-body
          %h5.card-title.text-center Edit
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            .form-label-group
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
              = f.label :email
              - if resource.errors.messages[:email].present?
                = render "devise/shared/error_messages", errors: resource.errors.full_messages_for(:email)
            .form-label-group
              = f.text_field :name, autofocus: true, class: "form-control"
              = f.label :name
            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              %div
                Currently waiting confirmation for: #{resource.unconfirmed_email}
            .form-label-group
              = f.password_field :password, autocomplete: "new-password", class: "form-control"
              = f.label :password
              %i (leave blank if you don't want to change it)
              - if resource.errors.messages[:password].present?
                = render "devise/shared/error_messages", errors: resource.errors.full_messages_for(:password)
            .actions
              = f.submit "Update", class: "btn btn-lg btn-primary btn-block text-uppercase"
