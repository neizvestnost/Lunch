<div data-section="replace-orders" >
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">Order id</th>
        <th scope="col">Customer</th>
        <th scope="col">Main dish</th>
        <th scope="col">Appetizer dish</th>
        <th scope="col">Drink</th>
      </tr>
    </thead>
    <tbody>
      {{#each orders}}
        <tr>
          <th scope="row">{{this.id}}</th>
          <td>{{this.customer.customer_email}}</td>
          <td>{{this.main_dish_name}}</td>
          <td>{{this.appetizer_dish_name}}</td>
          <td>{{this.drink_dish_name}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <nav aria-label="pager" class="pagy-bootstrap-nav pagination" role="navigation">
    <ul class="pagination">
    {{#if pagy.prev}}
      <li class="page-item orders-link prev">
        <a href={{pagy.prev_url}} class="page-link">‹ Prev</a>
      </li>
    {{else}}
      <li class="page-item orders-link prev disabled">
        <a href="#" class="page-link">‹ Prev</a>
      </li>
    {{/if}}

    {{#each pagy.series}}
      {{#if (isInteger this)}}
        <li class="page-item orders-link">
          <a href={{ createUrl ../this.pagy.scaffold_url this}} class="page-link">{{this}}</a>
        </li>
      {{else if (isString this)}}
        <li class="page-item orders-link active">
          <a href={{ createUrl ../this.pagy.scaffold_url this}} class="page-link">{{this}}</a>
        </li>
      {{else if (eq this "gap")}}
        <li class="page-item disabled gap">
          <a href="#" class="page-link">...</a>
        </li>
      {{/if}}
    {{/each}}
    
    {{#if pagy.next}}
      <li class="page-item orders-link next">
        <a href={{pagy.next_url}} class="page-link">Next ›</a>
      </li>
    {{else}}
      <li class="page-item orders-link next disabled"><a href="#" class="page-link">Next ›</a></li>
    {{/if}}
    </ul>
  </nav>
</div>
